{
  "name": "scraptpress",
  "version": "3.1.0",
  "description": "Professional Copart vehicle scraper API with optimized Search API extraction, async job queue with Redis, worker auto-scaling, rate limiting, Firestore, and Cloud Run optimization",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/RenePerezRodriguez/ScraptPress.git"
  },
  "author": "Rene Perez Rodriguez",
  "license": "ISC",
  "keywords": [
    "copart",
    "scraper",
    "vehicles",
    "api",
    "playwright",
    "firestore",
    "firebase",
    "typescript",
    "express",
    "cloud-run",
    "ai",
    "gemini",
    "vision-ai",
    "machine-learning"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "start:worker": "node dist/worker.js",
    "dev": "nodemon",
    "dev:local": "NODE_ENV=development nodemon",
    "dev:prod": "NODE_ENV=production nodemon",
    "dev:worker": "nodemon --watch src --ext ts --exec \"npm run build && node dist/worker.js\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:redis": "ts-node scripts/test-redis.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "clean": "rm -rf dist",
    "deploy": "npm run build && gcloud run deploy scraptpress --source . --region us-central1 --timeout=900s",
    "deploy:full": "pwsh -File ./scripts/deploy-cloud-run.ps1",
    "docker:build-worker": "docker build -f Dockerfile.worker -t scraptpress-worker .",
    "logs": "gcloud logging read 'resource.type=cloud_run_revision AND resource.labels.service_name=scraptpress' --limit=50 --format=\"table(timestamp,textPayload)\" --project=studio-6719476275-3891a --freshness=10m",
    "postinstall": "npx playwright install chromium --with-deps"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@sentry/node": "^10.25.0",
    "@sentry/profiling-node": "^10.25.0",
    "axios": "^1.13.2",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "firebase-admin": "^13.6.0",
    "helmet": "^7.1.0",
    "playwright": "^1.56.1",
    "redis": "^5.9.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bull": "^3.15.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}